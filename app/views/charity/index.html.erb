<h1><%= @title %></h1>

<div class="wrapper">
<% @charities.each do |charity| %>
  <div class="grid-container">
    <c:forEach var="charity" items="${charity_list}">
      <div class="grid-item"> 
        <div class="name">Name: <%= link_to charity.name, charity_path(charity.ein) %></div>
        <div class="logo"><img src="<%= charity.logo.to_s %>" alt="<%= charity.name %>"></div>
        <form action="/charities/#{charity_slug}" method="GET">
        <button type="submit">More Info</button>
        </form>
      </div>
    </c:forEach>
  </div> 
<% end %>
</div>
